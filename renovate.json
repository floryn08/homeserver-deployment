{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* 0-2 * * *"
  ],
  "updateNotScheduled": false,
  "assignees": [
    "floryn08"
  ],
  "reviewers": [
    "floryn08"
  ],
  "packageRules": [
    {
      "versioning": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "matchPackageNames": [
        "/^linuxserver\\//",
        "/^hotio\\//"
      ]
    },
    {
      "allowedVersions": "/^(\\d{1,3}\\.)(\\d*\\.)*\\d{1,3}$/",
      "matchPackageNames": [
        "/^.+/linuxserver\\/prowlarr/"
      ]
    },
    {
      "allowedVersions": "/^\\d\\.\\d+\\.\\d+$/",
      "matchPackageNames": [
        "/^.+/linuxserver\\/qbittorrent/"
      ]
    },
    {
      "allowedVersions": "/^(\\?\\!3)(\\d*\\.)*\\d{1,3}$/",
      "matchPackageNames": [
        "/^mcuadros\\/ofelia/"
      ]
    },
    {
      "versioning": "regex:^arm64v8-(?<compatibility>)?.*-ls(?<minor>\\d+)?$",
      "matchPackageNames": [
        "/^.+/linuxserver\\/tvheadend/"
      ]
    },
    {
      "matchFileNames": [
        "charts/apps/core-services/**"
      ],
      "groupName": "Core services",
      "groupSlug": "core-services"
    },
    {
      "matchFileNames": [
        "charts/apps/home-automation/**"
      ],
      "groupName": "Home automation",
      "groupSlug": "home-automation"
    },
    {
      "matchFileNames": [
        "charts/apps/media-management/**"
      ],
      "groupName": "Media management",
      "groupSlug": "media-management"
    },
    {
      "matchFileNames": [
        "charts/apps/utility-services/**"
      ],
      "groupName": "Utility services",
      "groupSlug": "utility-services"
    },
    {
      "matchFileNames": [
        "charts/apps/ai-services/**"
      ],
      "groupName": "AI Services",
      "groupSlug": "ai-services"
    },
    {
      "matchFileNames": [
        "charts/apps/game-servers/**"
      ],
      "groupName": "Game Servers",
      "groupSlug": "game-servers"
    },
    {
      "matchFileNames": [
        "charts/apps/monitoring/**"
      ],
      "groupName": "Monitoring",
      "groupSlug": "monitoring"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Traefik CrowdSec plugin version",
      "managerFilePatterns": [
        "/^charts/apps/core-services/traefik/values\\.yaml$/"
      ],
      "matchStrings": [
        "bouncer:\\s*\\n\\s*moduleName:.*\\n\\s*version:\\s*(?<currentValue>v[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "maxlerebourg/crowdsec-bouncer-traefik-plugin"
    },
    {
      "customType": "regex",
      "description": "Update argo vault plugin version",
      "managerFilePatterns": [
        "/^charts/apps/core-services/argo-cd/values\\.yaml$/"
      ],
      "matchStrings": [
        "env:\\s*\\n\\s*-\\s*name:\\s*AVP_VERSION\\n\\s*value:\\s*(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "argoproj-labs/argocd-vault-plugin"
    }
  ]
}
